---
import Layout from "../layouts/Layout.astro"
---

<Layout title="Happy Father's Day Dad!!">
	<main class="px-10 py-8 h-screen bg-zinc-100">
		<div class="font-semibold text-xl text-left">
			<h1>Happy <span class="text-blue-500">Fathers Day</span>!</h1>
			<h1>
				<span class="border-b-blue-500 border-b-2">Thank You</span> for being
				my <span class="font-bold text-blue-600" id="typewriter"></span>
			</h1>
		</div>
	</main>
</Layout>

<style></style>

<script>
	import Typewriter from "typewriter-effect/dist/core"
	const typewriter = new Typewriter("#typewriter", {
		strings: ["Dad.", "Role Model.", "Inspiration.", "Supporter."],
		autoStart: true,
	})
	typewriter.pauseFor(1000).start()
</script>
